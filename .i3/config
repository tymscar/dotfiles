bindsym $mod+Shift+q kill

# start dmenu 
bindsym $mod+d exec rofi -show run -lines 3 -eh 2 -width 100 -padding 600 -opacity "85" -bw 0 -bc "$bg-color" -bg "$bg-color" -fg "$text-color" -hlbg "$bg-color" -hlfg "#9575cd" -font "System San Francisco Display 12"

